{
  "dashboard": {
    "title": "Playwright Test Metrics",
    "tags": ["playwright", "testing", "metrics"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Test Pass Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "from(bucket: \"playwright_metrics\") |> range(start: -1h) |> filter(fn: (r) => r._measurement == \"test_summary\") |> last()",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 80, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Test Duration by Browser",
        "type": "graph",
        "targets": [
          {
            "expr": "from(bucket: \"playwright_metrics\") |> range(start: -24h) |> filter(fn: (r) => r._measurement == \"test_result\") |> group(columns: [\"browser\"]) |> aggregateWindow(every: 1h, fn: mean, createEmpty: false) |> yield(name: \"mean\")",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Test Results Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "from(bucket: \"playwright_metrics\") |> range(start: -7d) |> filter(fn: (r) => r._measurement == \"test_summary\") |> aggregateWindow(every: 1h, fn: mean, createEmpty: false)",
            "refId": "A"
          }
        ]
      }
    ],
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
