{
  "name": "superbet-test-automation",
  "version": "1.0.0",
  "description": "Enterprise-grade Playwright TypeScript test automation framework for Superbet.ro",
  "scripts": {
    "test": "playwright test",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:ui": "playwright test tests/ui",
    "test:api": "playwright test tests/api",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui:smoke": "playwright test tests/ui/specs --grep @smoke",
    "test:ui:regression": "playwright test tests/ui/specs --grep @regression",
    "test:report": "allure serve allure-results",
    "test:report:generate": "allure generate allure-results --clean -o allure-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "push-metrics": "node scripts/push-metrics.js",
    "clean": "node scripts/cleanup.js"
  },
  "keywords": [
    "playwright",
    "typescript",
    "test-automation",
    "e2e",
    "superbet"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@faker-js/faker": "^10.2.0",
    "@influxdata/influxdb-client": "^1.35.0",
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
