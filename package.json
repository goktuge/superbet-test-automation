{
  "name": "superbet-test-automation",
  "version": "1.0.0",
  "description": "Enterprise-grade Playwright TypeScript test automation framework for Superbet.ro",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test tests/ui",
    "test:api": "playwright test tests/api",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui:smoke": "playwright test tests/ui/specs --grep @smoke",
    "test:ui:regression": "playwright test tests/ui/specs --grep @regression",
    "test:report": "allure serve allure-results",
    "test:report:generate": "allure generate allure-results --clean -o allure-report",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "push-metrics": "node scripts/push-metrics.js",
    "clean": "node scripts/cleanup.js"
  },
  "keywords": [
    "playwright",
    "typescript",
    "test-automation",
    "e2e",
    "superbet"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^2.15.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
