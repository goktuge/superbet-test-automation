{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2015", "ES2022", "DOM"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["./tests/*"],
      "@pages/*": ["./tests/ui/pages/*"],
      "@helpers/*": ["./tests/ui/helpers/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "test-results", "allure-results"]
}
